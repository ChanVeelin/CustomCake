<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="FavoriteMapper">
    
   <!-- 찜 추가 -->
   <insert id="insertFavorite">
     INSERT INTO favorite (id,product_no,favorite_regdate) VALUES (#{id},#{product_no})
   </insert>
   
   <!-- 찜 목록 -->
   <select id="getListByFavorite" resultType="favorite">
      SELECT * FROM favorite WHERE id=#{id} AND product_no =#{product_no}
   </select>
   
   <!-- 찜내역 삭제 -->
   <delete id="deleteByFavorite">
      DELETE FROM favorite WHERE product_no#{product_no}
   </delete>
 
</mapper>
